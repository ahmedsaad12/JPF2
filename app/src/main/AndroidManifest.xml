<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.jpf">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name="com.app.jpf.share.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity

            android:name="com.app.jpf.activities_fragments.activity_products.ProductsActivity"
            android:exported="false"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.app.jpf.activities_fragments.activity_view.ViewActivity"
            android:exported="false"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.app.jpf.activities_fragments.activity_sign_up.SignUpActivity"
            android:exported="false"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.app.jpf.activities_fragments.activity_paints.PaintsActivity"
            android:exported="false"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.app.jpf.activities_fragments.activity_product_detials.ProductDetialsActivity"
            android:exported="false"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.app.jpf.activities_fragments.activity_notification.NotificationActivity"
            android:exported="false"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.app.jpf.activities_fragments.activity_award.AwardActivity"
            android:exported="false"/>
        <activity android:name="com.app.jpf.activities_fragments.activity_points.PointsActivity"
            android:exported="false"/>
        <activity android:name="com.app.jpf.activities_fragments.activity_shop_gallery.ShopGalleryActivity"
            android:exported="false"/>
        <activity
            android:name="com.app.jpf.activities_fragments.activity_qr_code.QrCodeActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"/>
        <activity
            android:name="com.app.jpf.activities_fragments.activity_map.MapActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            />
        <activity
            android:name="com.app.jpf.activities_fragments.activity_home.HomeActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"/>
        <activity
            android:name="com.app.jpf.activities_fragments.activity_verification_code.VerificationCodeActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize"
            />
        <activity
            android:name="com.app.jpf.activities_fragments.activity_login.LoginActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.app.jpf.activities_fragments.activity_splash.SplashActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_api_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service
            android:name="com.app.jpf.notifications.FireBaseMessaging"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>